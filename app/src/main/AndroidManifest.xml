<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.digitalgarden.gameswap"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true">
        <activity
            android:name=".activity.ActivityHome"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ActivityCreateAccount"
            android:label="Create Account"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activity.ActivityProductList"
            android:label="Product Page"/>

        <activity
            android:name=".activity.ActivityProduct"
            android:label="Product"/>

        <activity
            android:name=".activity.ActivityLocations"
            android:label="Locations"/>

        <activity
            android:name=".activity.ActivitySettings"
            android:label="Settings"/>

        <activity
            android:name=".activity.ActivityAbout"
            android:label="About"/>

        <activity
            android:name=".activity.ActivityCreatePost"
            android:label="Create Post"/>

        <activity
            android:name=".activity.ActivityMock"
            android:label="Mock"/>

    </application>

</manifest>