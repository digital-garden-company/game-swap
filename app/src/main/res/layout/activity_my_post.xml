<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/match"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_iamge"
            style="@style/block"
            android:layout_height="256dp"
            android:background="@color/red"
            android:scaleType="fitXY" />

        <LinearLayout
            style="@style/block"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/mypost_name"
                style="@style/text_headline"
                android:text="Name"/>

            <TextView
                android:id="@+id/mypost_price"
                style="@style/text_body_black"
                android:text="$"/>

            <TextView
                android:id="@+id/mypost_location"
                style="@style/text_body"
                android:text="Location"/>

            <TextView
                android:id="@+id/mypost_description"
                style="@style/text_body_black"
                android:layout_marginTop="8dp"
                android:text="Description"/>

        </LinearLayout>

        <RelativeLayout
            style="@style/block"
            android:paddingBottom="8dp">

            <TextView
                style="@style/text_subheader"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_action_user"
                android:text="Contact"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>